doctype html
html
  head
    meta[charset="utf-8"]
    meta[http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"]
    title= app_name
    meta[name="description" content=""]
    meta[name="viewport" content="width=device-width, initial-scale=1"]
