var el              = document.getElementById('<%= @article.dom_id %>');
var isExpanded      = el.classList.contains('show');
var restoreEl       = document.createElement('div');
var collapsedHTML   = '<%= j render(partial: 'articles/article', object: @article, locals: { parent: 'articles' }) %>';
var expandedHTML    = '<%= j render(partial: 'articles/article', object: @article, locals: { show: true, parent: 'articles' }) %>';

restoreEl.innerHTML       = isExpanded ? expandedHTML : collapsedHTML;
el.replaceWith(restoreEl.firstChild);

var snackbar       = document.createElement('div');
snackbar.innerHTML = '<%= j render(Material::Snackbar, flash: flash) %>';
document.body.appendChild(snackbar.firstChild);
