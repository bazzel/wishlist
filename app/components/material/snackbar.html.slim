- if message.present?
  div(data-controller='snackbar' data-target='snackbar.container' class=snackbar_class)
    .snackbar-body
      = message
      - if action
        span.snackbar-btn.d-inline-block.ml-4
          =< action
    = close_icon(class: 'text-light ml-2', data: { action: 'snackbar#hide' })
